
  <p class="notice">
			<%= notice %>
			</p>
			<% if @book.errors.any? %>
				<p class="error">[error]can't be blank</p>
			<% end %>
			<h1>Editing Book</h1>
			<div class="error">
			<% if @book.errors.any? %>
					<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
					<ul>
						<%= @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>
			</div>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %>
				<br>
				<%= f.submit "Update Book" %>
			<% end %>

<%= link_to 'Show', book_path(@book), class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
